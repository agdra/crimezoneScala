# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Jenis Kejahatan
GET         /jeniskejahatan                       controllers.JenisKejahatanControl.list
GET         /jeniskejahatan/:id                   controllers.JenisKejahatanControl.findByID(id: Int)


# Lokasi Kejahatan
GET         /lokasikejahatan                       controllers.LokasiKejahatanControl.list
GET         /lokasikejahatan/:id                   controllers.LokasiKejahatanControl.findByID(id: Int)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
